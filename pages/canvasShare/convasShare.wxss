/* pages/canvasShare/convasShare.wxss */
.save-image {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1rpx solid rgba(0,0,0,0.12);
    background: #fff;
}

.save-image view {
    flex-grow: 1;
    color: #fff;
    font-size: 16px;
    height: 44px;
    line-height: 44px;
    background: #4c6f94;
    margin: 1px 16px 0;
    text-align: center;
    position: relative;
}

.save-image view.disable {
    background: #aaa;
}

.save-image view.hover {
    opacity: .6;
}