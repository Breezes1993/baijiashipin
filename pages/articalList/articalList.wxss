/* pages/articalList/articalList.wxss */
@import "../common/modal.wxss";
page {
  background-color: #f4f4f4;
  font-family: 'PingFangSC-Light';
}

.first-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.first-cell .user {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border-radius: 80rpx;
}

.date {
  margin-left: 40rpx;
  font-size: 64rpx;
  color: rgba(0, 0, 0, 0.6);
  font-family: 'PingFangSC-Light';
  font-weight: Lighter;
}

.list {
  margin: 20rpx 24rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border: solid 1rpx #d8d8d8;
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.05);
}

.view-text {
  padding: 60rpx 40rpx 10rpx;
  display: flex;
  flex-direction: column;
}

.text {
  font-size: 32rpx;
  letter-spacing: 0.4px;
  line-height: 1.6;
  font-weight: Lighter;
}

.viewcount {
  padding: 10rpx 0;
  text-align: right;
  font-size: 26rpx;
}

.line {
  border-bottom: 1px solid #e6e7e9;
}

.vip-article{
  position:absolute;  
  top:0;
  left:0;
  width: 80rpx;
  height: 80rpx;
}